<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fathimamulaffer.zengames.Initialization">
    <TextView
        android:id="@+id/text1"
        android:text="Please fill in the user details"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/uname"
        android:inputType="text"
        android:hint="Enter User ID here"
        android:paddingTop="50dp"
        android:layout_below="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/baddr"
        android:inputType="text"
        android:hint="Enter bluetooth address here"
        android:paddingTop="30dp"
        android:layout_below="@+id/uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/save"
        android:text="save"
        android:layout_below="@+id/baddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
