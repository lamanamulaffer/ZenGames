<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fathimamulaffer.zengames.ProfileActivity">

    <include layout="@layout/toolbar2"
        android:id="@+id/my_toolbar3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/uid_text"
                android:text="user ID"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/uid"
                android:background="@color/green"
                android:text="user ID number"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@+id/uid_text"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/noti_text"
                android:text="set time for daily reminder"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/uid"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/noti_time"
                android:background="@color/pink"
                android:text="pick time"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:layout_below="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/graph"
                android:text="Your avg breathing rate"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@+id/noti_time"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
