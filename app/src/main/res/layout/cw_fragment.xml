<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cw_title"
        android:text="Colour Word"
        android:textStyle="bold"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cw_desc"
        android:text="@string/cw_description"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cw_timerem"
        android:text="Time: 5 mins"
        android:textStyle="bold"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cw_notice1"
        android:text="This activity cannot be paused"
        android:textStyle="bold"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cw_notice2"
        android:text="You are required to wear a chest belt for this activity"
        android:textStyle="bold"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainpage_item_height" />

    <TextView
        android:id="@+id/cw_start"
        android:background="@color/purple"
        android:text="Start"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainpage_item_height"/>
</LinearLayout>